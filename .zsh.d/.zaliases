setopt complete_aliases

alias which="command -v"

alias -g ls='ls -F --color=tty'  # or exa -F
alias -g ll='ls -lF --color=tty'  # or exa -lF
alias -g la='ls -laF --color=tty'  # or exa -laF
alias -g cp='cp -i'
alias -g mv='mv -i'
alias -g rm='rm -i'
alias h='history'
alias g='git'
alias -g H='| head'
alias -g T='| tail'
alias -g W='| wc'
alias -g G='| grep'
alias -g wl='wc -l'
alias gomi='rm -f *~'
alias relogin='exec $SHELL -l'
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -- -='cd -'
## http://keisanbutsuriya.hateblo.jp/entry/2015/02/13/133858
alias e='emacsclient -nw -a ""'
alias emacs='emacsclient -nw -a ""'
alias ekill='emacsclient -e "(kill-emacs)"'
alias dpython='python -m ipdb -c continue'

if [[ -x `which colordiff` ]]; then
  alias diff='colordiff -u'
else
  alias diff='diff -u'
fi

