# Basic CLI tools
brew "gcc"
brew "wget"
brew "curl"
brew "cmake"

# Shells
brew "zsh"

# Editors
brew "emacs"
brew "vim"

# Programming languages
brew "python"
brew "python@3.9"
brew "python@3.8"
brew "perl"
brew "ruby"
brew "go"
brew "nodebrew"
# Rust is installed via rustup

# Modern alternatives to Liunx CLI tools
brew "git"        # git
brew "openssh"    # ssh
brew "tmux"       # tmux
brew "htop"       # top
brew "lsd"        # ls
brew "fd"         # find
brew "ripgrep"    # grep -r
brew "procs"      # ps
brew "colordiff"  # diff
brew "sd"         # sed/awk
brew "rargs"      # Util like xargs + awk with pattern matching support
# bat is installed via zinit

# Misc
brew "moreutils"  # chronic, combine, ifne, sponge, ...
brew "jq"         # command-line JSON processor
brew "source-highlight"
brew "tree"  # Display directories as trees (with optional color/HTML output)
brew "pipx"  # Execute binaries from Python packages in isolated environments
brew "atuin"  # Improved shell history for zsh and bash
brew "zoxide"  # Shell extension to navigate your filesystem faster

# System
brew "ansible"
brew "whois"
