[user]
    name = nobu-g
    email = ueda-n127@hotmail.co.jp

[alias]
    s = status
    a = add
    df = diff
    dfc = diff --cached
    co = checkout
    cob = checkout -b
    bra = branch
    cm = commit -m
    cam = commit -a -m
    com = checkout master
    unstage = reset HEAD --
    last = log -1 HEAD
    aliases = config --get-regexp alias
    remotes = remote -v
    tags = tag

    # git l で綺麗に過去の履歴が見れる
    l = log --graph --pretty='%C(yellow)%h%Creset %C(cyan bold)%d%Creset %s %Cgreen[%cd] %C(bold blue)<%an> %Creset' --decorate --date=iso
	tree = log --graph --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)? %an%C(reset)%C(bold yellow)%d%C(reset)\" --abbrev-commit --date=relative

[core]
    editor = emacsclient -nw
    pager = diff-so-fancy | less --tabs=4 -Ri -+F -+X

[color]
    ui = true

[pager]
    branch = cat

[merge]
    ff = false

[pull]
    ff = only

[fetch]
    prune = true

[push]
    # Always push tags, see https://git-scm.com/docs/git-config#git-config-pushfollowTags.
    followTags = true

[interactive]
    # https://github.com/so-fancy/diff-so-fancy/issues/35#issuecomment-578188120
    diffFilter = (cat && diff-so-fancy)

[color "diff-highlight"]
    oldNormal = "red bold"
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"

[color "diff"]
    meta = "11"
    frag = "magenta bold"
    commit = "yellow bold"
    old = "red bold"
    new = "green bold"
    whitespace = "red reverse"

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[advice]
    addIgnoredFile = false

